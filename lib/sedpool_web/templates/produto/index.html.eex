<center>
 <div class="container-fluid row">
     <div class="col-md-12 offset-md-0">
    <div class="card">


<h2 class="card-header">Lista Produtos</h2>

<table class="table">
  <thead>
    <tr>
      <th>Filial</th>
      <th>Codigo</th>
      <th>Descrição</th>
      <th>Tipo</th>
      <th>Unid.Medida</th>
      <th>Grupo</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for produto <- @produtos do %>
    <tr>
      <td><%= produto.filial_produto %></td>
      <td><%= produto.codigo_produto %></td>
      <td><%= produto.descricao_produto %></td>
      <td><%= produto.tipo_produto %></td>
      <td><%= produto.unidade_medida_produto %></td>
      <td><%= produto.grupo_produto %></td>

      <td class="text-right">
        <span><%= link "Monstrar", to: produto_path(@conn, :show, produto), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Editar", to: produto_path(@conn, :edit, produto), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Deletar", to: produto_path(@conn, :delete, produto), method: :delete, data: [confirm: "Você tem certeza?"], class: "btn btn-danger btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "Novo Produto", to: produto_path(@conn, :new) %></span>
<%= pagination_links @page, view_style: :bootstrap_v4, next: "Avançar", previous: "Voltar" %>

</div>
</div>
</div>
</center>
